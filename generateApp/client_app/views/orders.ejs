
<%- include ("layout/header") %>

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading" style="background-color: #223f3a;">
                        <div class="panel-title" >
                            <div class="row">
                                <div class="col-md-12">
                                    <h3 style="color: #d3a04f;"><i class="fa fa-shopping-cart"></i> <span style="color: #fff;">Mes Commandes</span> </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <% if (typeof(orders) !== 'undefined' && orders.length > 0) { %>
                        <% for (var i = 0; i < orders.length; i++) { %>
                        <div class="row">
                            <div class="col-md-4 col-xs-6">
                                <h4 class="product-name"><a href="#"><strong><%= orders[i].order_date.toLocaleDateString() %></strong></a></h4><h4><small><%= orders[i].products_count + " Produits" %></small></h4>
                            </div>
                            <div class="col-md-6 col-xs-12" style="display: flex; justify-content: space-between;">
                                <div class="col-md-8 col-xs-8 text-right">
                                    <h4><strong> 
                                        <% let formating=Intl.NumberFormat('en-US') %>
                                        <%= formating.format(orders[i].order_total_price+orders[i].delivery_price)+" DA" %>
                                    </strong></h4>
                                </div>
                                
                                <div class="col-md-8 col-xs-8 text-right">
                                    <% if (orders[i].stat_id == 1) { %>
                                        <h6 class="text-warning"><strong><%= orders[i].stat_name %></strong></h6>
                                    <% } else if (orders[i].stat_id == 2) { %>
                                        <h6 class="text-danger"><strong><%= orders[i].stat_name %></strong></h6>
                                    <% } else if (orders[i].stat_id == 3) { %>
                                        <h6 class="text-info"><strong><%= orders[i].stat_name %></strong></h6>
                                    <% } else if (orders[i].stat_id == 4) { %>
                                        <h6 class="text-success"><strong><%= orders[i].stat_name %></strong></h6>
                                    <% } %>
                                    
                                </div>
                            </div>
                        </div>
                        <hr>
                        <% }} %>
                    </div>
                    <!-- <div class="panel-footer">
                        <div class="row text-center">
                            <div class="col-md-9">
                                <h4 class="text-right">Total : <strong>5 000.00</strong></h4>
                            </div>
                            <div class="col-md-3">
                                <button type="button" class="btn btn-success btn-block">
                                    Valider
                                </button>
                            </div>
                        </div>
                    </div> -->
                </div>
            </div>
        </div>
    </div>
    
</div>

<%- include ("layout/footer") %>