
<%- include ("layout/header") %>

<div class="section">
    <div class="container">
        <div class="row">
            <% if (typeof(cart) !== 'undefined' && cart.length > 0) { %>

                <div class="col-md-12">
                    <div class="panel panel-info">
                        <div class="panel-heading" style="background-color: #223f3a;">
                            <div class="panel-title" >
                                <div class="row">
                                    <div class="col-md-12" style="display: flex; justify-content: space-between; align-items: center;">
                                        <h3 style="color: #d3a04f;"><i class="fa fa-shopping-cart"></i> <span style="color: #fff;">Panier</span></h3>
                                        <h3 style="color: #d3a04f;"><%= cart[0].productCount %> <span style="color: #fff; font-size: 15px;"> Produits</span></h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <% if (typeof(cart_p) !== 'undefined' && cart_p.length > 0) { %>
                            <% for (var i = 0; i < cart_p.length; i++) { %>
                            <div class="row">
                                <div class="col-md-2 col-xs-4 text-center"><img class="img-responsive" src="/img/product/<%= cart_p[i].product_id %>/main.jpg" width="80">
                                </div>
                                <div class="col-md-4 col-xs-8">
                                    <h4 class="product-name"><strong><%= cart_p[i].product_name %></strong></h4><h4 class="mobile-none"><small><%= cart_p[i].product_desig %></small></h4>
                                </div>
                                <div class="col-md-6 col-xs-12" style="display: flex; justify-content: space-between; margin-top: 5px;">
                                    <div class="col-md-8 col-xs-6 text-right" style="padding-top: 2% ;">
                                        <h4><strong>
                                            <% let formating=Intl.NumberFormat('en-US') %>
                                            <%= formating.format(cart_p[i].product_price_c)+" DA" %>
                                        <span class="text-muted">x</span></strong></h4>
                                    </div>
                                    <div class="col-md-2 col-xs-4">
                                        <input type="number" class="form-control input-xs myInputQte" value="<%= cart_p[i].product_qt_c %>" idp = "<%= cart_p[i].product_id %>">
                                    </div>
                                    <div class="col-md-2 col-xs-2">
                                        <button type="button" class="btn btn-link myBtnDelete" idp = "<%= cart_p[i].product_id %>">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <% }} else { %>

                                <div class="text-info">
                                    
                                    Votre panier est vide.
                                
                                </div>
                        
                            <% } %>

                        </div>
                        <% if (cart[0].productCount > 0) { %>

                            <div class="panel-footer">
                                <div class="row text-center">
                                    <div class="col-md-9 myTotalCart">
                                        <h4 class="text-right">Total : <strong> 
                                            <% let formating=Intl.NumberFormat('en-US') %>
                                            <%= formating.format(cart[0].totalPrice)+" DA" %>
                                        </strong></h4>
                                    </div>
                                    <div class="col-md-3">
                                        <button type="button" class="btn btn-success btn-block myBtnValid">
                                            Valider
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                        <% } %>
                    </div>
                </div>
                
            <% } else { %>

                <div class="alert alert-danger mt-5" role="alert">
                    
                    Aucun panier trouv√© !
                
                </div>
        
            <% } %>
        </div>
    </div>
    
</div>

<%- include ("layout/footer") %>