<%- include ("layouts/header.ejs") %>
            <div id="top" class="sa-app__body">
                <div class="mx-sm-2 px-2 px-sm-3 px-xxl-4 pb-6">
                    <% if (typeof(user) !== 'undefined' && user != null && user.length > 0) { %>
                    <form class="container container--max--xl" method="post">
                        <div class="py-5">
                            <div class="row g-4 align-items-center">
                                <div class="col">

                                    <h1 class="h3 m-0">Modifier votre profile</h1>
                                </div>
                                <div class="col-auto d-flex"><a href="/home" class="btn btn-secondary me-3">Retour</a>
                                    <button class="btn btn-primary" type="submit">Sauvegarder</button></div>
                            </div>
                        </div>
                        <div class="sa-entity-layout"
                            data-sa-container-query="{&quot;920&quot;:&quot;sa-entity-layout--size--md&quot;,&quot;1100&quot;:&quot;sa-entity-layout--size--lg&quot;}">
                            <div class="sa-entity-layout__body">
                                <div class="sa-entity-layout__main">
                                    <div class="card">
                                        <div class="card-body p-5">
                                            <% if (typeof(err) != "undefined" && err != null && err == 1) { %>
                                                <div class="alert alert-danger" role="alert">Remplissez les champs* obligatoire !</div>
                                            <% } else if (typeof(err) != "undefined" && err != null && err == 2) { %>
                                                <div class="alert alert-danger" role="alert">Mot de passe incorrect !</div>
                                            <% } else if (typeof(err) != "undefined" && err != null && err == 3) { %>
                                                <div class="alert alert-danger" role="alert">Nom d'Utilisateur existe déja !</div>    
                                            <% } else if (typeof(err) != "undefined" && err != null && err == 0) { %>
                                                <div class="alert alert-success ms-4 me-4" role="alert">Succées !</div>
                                            <% } %> 
                                            <div class="row">
                                                <div class="mb-4 col-12"><label class="form-label">Utilsateur*</label><input type="text" name="username"
                                                    class="form-control form-control-lg" value="<%= user[0].user_username %>" required/></div>
                                                <div class="mb-4 col-6"><label class="form-label">Mot de passe*</label><input type="password" name="password"
                                                    class="form-control form-control-lg" required /></div>
                                                <div class="mb-4 col-6"><label class="form-label">Re-Mot de passe*</label><input type="password" name="password_c"
                                                    class="form-control form-control-lg" required/></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <% } else { %>
        
                        <div class="alert alert-danger" role="alert">Aucun utilisateur correspondant</div>

                    <% } %>
                </div>
            </div><!-- sa-app__body / end --><!-- sa-app__footer -->
<%- include ("layouts/footer.ejs") %>