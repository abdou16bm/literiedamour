<%- include ("layouts/header.ejs") %>


<main class="main">


    <div class="sa-app__body px-2 px-lg-4">
        <div class="container pb-6">
          <div class="py-5">
            <div class="row g-4 align-items-center">
              <div class="col">
                <h1 class="h3 m-0">Tableau de bord</h1>
              </div>
            </div>
          </div>
          <div class="row g-4 g-xl-5">

            <% if (typeof(sub_category) !== 'undefined' && sub_category != null && sub_category.length > 0) { %>
                <div class="col-12 col-md-4 d-flex">
                  <div class="card saw-indicator flex-grow-1"
                    data-sa-container-query="{&quot;340&quot;:&quot;saw-indicator--size--lg&quot;}">
                    <div class="sa-widget-header saw-indicator__header">
                      <span><a href="/sub_category/list"> <h2 class="sa-widget-header__title">Cat√©gories</h2></a></span>
                    </div>
                    <div class="saw-indicator__body">
                      <div class="saw-indicator__value"><%= sub_category[0].sub_category_count %></div>
                    </div>
                  </div>
                </div>
              <% } %>
              <!--    <% if (typeof(brands) !== 'undefined' && brands != null && brands.length > 0) { %>
                  <div class="col-12 col-md-4 d-flex">
                    <div class="card saw-indicator flex-grow-1"
                      data-sa-container-query="{&quot;340&quot;:&quot;saw-indicator--size--lg&quot;}">
                      <div class="sa-widget-header saw-indicator__header">
                        <span><h2 class="sa-widget-header__title">Marques</h2></span>
                      </div>
                      <div class="saw-indicator__body">
                        <div class="saw-indicator__value"><%= brands[0].brand_count %></div>
                      </div>
                    </div>
                  </div>
                <% } %> -->
                <% if (typeof(products) !== 'undefined' && products != null && products.length > 0) { %>
                    <div class="col-12 col-md-4 d-flex">
                      <div class="card saw-indicator flex-grow-1"
                        data-sa-container-query="{&quot;340&quot;:&quot;saw-indicator--size--lg&quot;}">
                        <div class="sa-widget-header saw-indicator__header">
                          <span><a href="/products/list"><h2 class="sa-widget-header__title">Produits</h2></a></span>
                        </div>
                        <div class="saw-indicator__body">
                          <div class="saw-indicator__value"><%= products[0].products_count %></div>
                        </div>
                      </div>
                    </div>
                <% } %>
                <% if (typeof(orders) !== 'undefined' && orders != null && orders.length > 0) { %>
                    <div class="col-12 col-md-4 d-flex">
                      <div class="card saw-indicator flex-grow-1"
                        data-sa-container-query="{&quot;340&quot;:&quot;saw-indicator--size--lg&quot;}">
                        <div class="sa-widget-header saw-indicator__header">
                          <span><a href="/orders/list"><h2 class="sa-widget-header__title">Commandes</h2></a></span>
                        </div>
                        <div class="saw-indicator__body">
                          <div class="saw-indicator__value"><%= orders[0].orders_count %></div>
                        </div>
                      </div>
                    </div>
                <% } %>
            
          </div>
        </div>
      </div>


</main>
<%- include ("layouts/footer.ejs") %>